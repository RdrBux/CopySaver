{
  "manifest_version": 3,
  "name": "Copy Saver",
  "version": "1.0.1",
  "action": {
      "default_title": "Copy Saver",
      "default_popup": "index.html"
  },
  "description": "Copy Saver: Your clipboard's guardian angel. Effortlessly save and organize copied content, never lose valuable information again.",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "permissions": [
    "storage", "clipboardRead", "clipboardWrite", "scripting", "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["script.js"]
		}
	]
}